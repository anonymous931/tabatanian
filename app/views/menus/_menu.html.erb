<div class="col-auto mb-3">
  <div id="menu-id-<%= menu.id %>">
    <div class="card">
      <%= link_to menu_path(menu.id) do %>
        <%= image_tag menu.thumbnail.url, class: 'card-img-top', size: '300x200' %>
      <% end %>
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to menu_path(menu.id) do %>
            <%= menu.title %>
          <% end %>
        </h5>
        <ul class="list-inline mt-3 mb-1">
          <li class="list-inline-item">
            <i class="fa-solid fa-user" style="color: #1e2471;"></i>
            <%= link_to menu.user.name, user_path(menu.user.id) %>
          </li>
          <% if menu.user == current_user %>
            <%= render 'crud_menu', menu: menu %>
          <% else %>
            <%= render 'favorite_button', menu: menu %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>