  <div id="menu-id-<%= menu.id %>">
    <div class="card">
      <%= image_tag 'sample.jpg', class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
          <a href="#">
            <%= menu.title %>
          </a>
        </h4>
        <div class='mr-10 float-right'>
        </div>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= menu.user.name %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>