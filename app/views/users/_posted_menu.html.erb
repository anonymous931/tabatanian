<div class="card col-5 m-3">
  <div class="card-body">
    <%= link_to menu_path(posted_menu.id) do %>
      <h5 class="card-title"><%= posted_menu.title %></h5>
    <% end %>
    <% if posted_menu.user == current_user %>
      <%= render 'menus/crud_menu', menu: posted_menu %>
    <% end %>
  </div>
</div>