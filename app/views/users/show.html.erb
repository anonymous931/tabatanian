<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">

      <div class="row justify-content-center">
        <div class="col-auto">
          <%= image_tag @user.avatar.url, size: '100x100', class: "rounded-circle user-information_img" %>
        </div>
        <h4 class="text-center mt-3 mb-3"><%= @user.name%></h4>
        <% if @user == current_user %>
          <%= link_to edit_user_path(@user.id), class: "col-auto" do %>
            <button type="button" class="btn btn-primary">プロフィールを編集</button>
          <% end %>
        <% end %>
        <p class="mt-3">自己紹介：<%= @user.profile.try(:introduction) %></p>
      </div>

      <div class="row justify-content-between mt-5">
        <h3 class="col-auto">投稿したメニュー</h3>
        <% if @user == current_user %>
          <%= link_to new_menu_path, class: "col-auto" do %>
            <button type="button" class="btn btn-primary">投稿する</button>
          <% end %>
        <% end %>
      </div>
      <div class="row row-cols-2 justify-content-between">
        <%= render partial: 'users/posted_menu', collection: @posted_menus  %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @posted_menus %>
      </div>

      <h3 class="text-center mt-5">目標設定</h3>

      <div class="row justify-content-around mt-5">

        <div class="col-5 card">
          <div class="card-body">
            <h4 class="text-center">現在</h4>
            <h6 class="text-center mt-4">体重：<%= @user.profile.try(:weight) %>kg</h6>
            <h6 class="text-center mt-3">体脂肪率：<%= @user.profile.try(:fat) %>%</h6>
          </div>
        </div>

        <div class="col-5 card">
          <div class="card-body">
            <h4 class="text-center">目標</h4>
            <h6 class="text-center mt-4">体重：<%= @user.profile.try(:target_weight) %>kg</h6>
            <h6 class="text-center mt-3">体脂肪率：<%= @user.profile.try(:target_fat) %>%</h6>
            <h6 class="text-center mt-3">期限：<%= @user.profile.try(:deadline)&.strftime('%m月%d日') %></h6>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>