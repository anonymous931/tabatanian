<tr id="comment-<%= comment.id %>">
  <td style="width: 60px"  class="pt-3">
    <%= image_tag comment.user.avatar.url, class: 'rounded-circle', size: '50x50' %>
  </td>
  <td  class="pt-3">
    <h3 class="small"><%= comment.user.name %></h3>
    <div id="js-comment-<%= comment.id %>">
      <%= simple_format(comment.body) %>
    </div>
    <div id="js-textarea-comment-box-<%= comment.id %>" style="display: none;">
      <%= form_with model: comment, url: comment_path(comment), id: 'update_comment', local: false do |ff| %>
        <%= render 'shared/error_messages', object: ff.object %>
        <%= ff.text_area :body, class: 'form-control mb-3', id: 'js-edit-comment-body' %>
        <%= ff.submit '更新', class: 'btn btn-success' %>
      <% end %>
    </div>
  </td>

  <% if comment.user == current_user %>
    <td class="action pt-3">
      <ul class="list-inline justify-content-center" style="float: right;">
        <li class="list-inline-item">
          <button class='js-edit-comment-button' data-comment-id="<%= comment.id %>">
            <i class="fa-solid fa-pen" style="color: #1e2471;"></i>
          </button>
        </li>
        <li class="list-inline-item">
          <%= link_to comment_path(comment), class: 'js-delete-comment-button', method: :delete, data: { confirm: '本当に削除しますか？' }, remote: true do %>
            <i class="fa-solid fa-trash" style="color: #1e2471;"></i>
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>