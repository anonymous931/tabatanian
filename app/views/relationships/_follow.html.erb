<div class="card mt-3">
  <div class="card-body row justify-content-between">
    <div class="col-auto">
      <%= link_to user_path(follow.id) do %>
        <%= image_tag follow.avatar.url, size: '50x50', class: "rounded-circle user-information_img" %>
      <% end %>
      <%= link_to follow.name, user_path(follow.id) %>
    </div>
    <div class="col-auto d-flex align-items-center">
      <% if current_user != follow %>
        <% if current_user.decorate.following?(follow) %>
          <%= link_to 'フォローを外す', user_relationships_path(follow.id), method: :DELETE, class: "btn btn-primary col-auto", type: "button", data:{ confirm: "フォローを外しますか？" } %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>