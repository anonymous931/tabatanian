<div class="container mt-4">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h2><%= t('.title') %></h2>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group mt-4">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group mt-4">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="actions mt-4 text-center">
          <%= f.submit 'ログイン', class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center mt-4'>
        <%= link_to t('.to_register_page'), new_user_path %>
        <%= link_to t('.password_forget'), new_password_reset_path %>
      </div>
      <div class="my-4 text-center">
        <%= link_to auth_at_provider_path(provider: :google) do %>
          <%= image_tag 'btn_google_signin_dark_normal_web.png' %>
        <% end %>
      </div>
    </div>
  </div>
</div>